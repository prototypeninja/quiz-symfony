{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container">
        <div class="row  justify-content-center align-items-center">


<div class="log-div">
    <form action="{{ path('login') }}" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey | trans(error.messagedata,'security')}}</div>
        {% endif %}
        <div class="form-group">
            <label for="login-input">Nom</label>
            <input type="text" class="form-control" id="login-input" name="_username" value="{{ lastUsername }}" placeholder="Login">
        </div>
        <div class="form-group">
            <label for="pas-input">Password</label>
            <input type="password" class="form-control" id="pas-input" name="_password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Connexion</button>
    </form>
    <div class="log-face">
        <button type="button" class="btn btn-primary btn-lg mt-3 ">Connexion avec Facebook</button>
    </div>

</div>



        </div>
    </div>


{% endblock %}
